<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notify_field"
        android:id="@+id/notifyText"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_alignBaseline="@+id/notifyField"
        android:layout_alignBottom="@+id/notifyField" />

    <EditText
        android:layout_width="164dp"
        android:inputType="text"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:id="@+id/notifyField"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/notifyText"
        android:layout_marginTop="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/outside_text"
        android:id="@+id/outsideText"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_below="@+id/notifyField"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_field"
        android:id="@+id/startText"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_alignLeft="@+id/notifyText"
        android:layout_below="@+id/outsideText"/>

    <EditText
        android:layout_width="164dp"
        android:inputType="text"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:id="@+id/startField"
        android:layout_toRightOf="@+id/startText"
        android:layout_below="@+id/outsideText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/end_field"
        android:id="@+id/endText"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_alignLeft="@+id/startText"
        android:layout_below="@+id/startField"/>

    <EditText
        android:layout_width="164dp"
        android:inputType="text"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:id="@+id/endField"
        android:layout_toRightOf="@+id/endText"
        android:layout_below="@+id/startText" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:id="@+id/saveButton"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>
